{% extends 'CoreBundle:Plan:layout.html.twig' %}

{%- block actions -%}
    <a {{ "hint.plan.see.plan"|hint('left') }} class="waves-effect waves-light btn" href="{{ path('core_plan_show', { 'id': plan.id }) }}">{{ 'core.show'|trans }}</a>
    <a {{ "hint.plan.see.enterprise"|hint('left') }} class="waves-effect waves-light btn" href="{{ url('core_enterprise_show', {'slug': plan.enterprise.slug}) }}">{{ plan.enterprise.name }}</a>
    {{ parent() }}
{%- endblock -%}

{% block body_content %}
    <div class="col s6 offset-s3">
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}

        {% include 'CoreBundle:Template:form/button/edit.html.twig' %}
        {{ form_end(edit_form) }}

        {% include 'CoreBundle:Template:confirm_delete.html.twig' %}
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $('.modal-trigger').leanModal();
            $('select').material_select();
        });
    </script>
{% endblock %}
