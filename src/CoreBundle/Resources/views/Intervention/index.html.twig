{% extends 'CoreBundle:Intervention:layout.html.twig' %}

{% block body %}

    {% if orphan_interventions is not empty %}
        <div {{ "hint.intervention.uncounted"|hint('left') }} class="col s12">
            <h4>{{ "core.enterprise.orphan_interventions"|trans }}</h4>
            {% include 'CoreBundle:Template:list_interventions.html.twig' with {'with_enterprise' : true, 'interventions': orphan_interventions} %}
        </div>
    {% endif %}

    <div class="col s12">
        <h4>{{ "core.enterprise.list_interventions"|trans }}</h4>
        {% include 'CoreBundle:Template:list_interventions.html.twig' with {'interventions': pagination, 'with_enterprise': true} %}
    </div>

    <div class="col s12 center-align">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}
