{% extends 'CoreBundle:Enterprise:layout.html.twig' %}

{%- block actions -%}
    <a {{ "hint.enterprise.see.enterprise"|hint('left') }} class="waves-effect waves-light btn" href="{{ path('core_enterprise_show', { 'slug': enterprise.slug }) }}">{{ enterprise.name }}</a>
    {{ parent() }}
{%- endblock -%}

{% block body_content %}
    <div class="col s6 offset-s3">
        {% include 'CoreBundle:Template:Form/entity/edit_enterprise.html.twig' with {'form': edit_form } %}
        {% include 'CoreBundle:Template:confirm_delete.html.twig' %}
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $('.modal-trigger').leanModal();
        });
    </script>
{% endblock %}
