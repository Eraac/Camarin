<!-- Modal Structure -->
<div id="editPlan" class="modal">
    <div class="modal-content">
        <h4>{{ "core.confirm.edit_plan"|trans }}</h4>

        {{ form_start(edit_plan_form) }}
        {{ form_row(edit_plan_form.expireAt) }}
        {{ form_row(edit_plan_form.description) }}
        {% include 'CoreBundle:Template:form/button/edit.html.twig' %}
        {{ form_end(edit_plan_form) }}
    </div>

    <div class="modal-footer">
        <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">{{ "core.close"|trans }}</a>
    </div>
</div>
